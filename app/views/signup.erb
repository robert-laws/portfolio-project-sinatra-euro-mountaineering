<section>
  <span><%= @error_messages %></span>
  <form action="/signup" method="POST" class="em-form">
    <h1>Signup for a New Account
      <span>Please fill all the texts in the fields.</span>
    </h1>
    <label>
      <span>First Name :</span>
      <input id="first_name" type="text" name="first_name" placeholder="Your First Name" />
    </label>

    <label>
      <span>Last Name :</span>
      <input id="last_name" type="text" name="last_name" placeholder="Your Last Name" />
    </label>
    
    <label>
      <span>Your Email :</span>
      <input id="email" type="text" name="email" placeholder="Valid Email" />
    </label>
    
    <label>
      <span>Choose a Club :</span>
      <select name="club_id">
        <% Club.all.each do |club| %>
          <option value="<%= club.id %>"><%= club.name %></option>
        <% end %>
      </select>
    </label>

    <label>
      <span>Username :</span>
      <input id="username" type="text" name="username" placeholder="Username" />
    </label>
    
    <label>
      <span>Password :</span>
      <input id="password" type="password" name="password" placeholder="Password" />
    </label>

    <label>
      <span>&nbsp;</span> 
      <input type="submit" class="button" value="Create Account" />
    </label>

    <br>
    <div style="text-align: center; color: red; font-weight: bold;">
      <% if @error_message %>
        <p><%= @error_message %></p>
      <% end %>
    </div>  
  </form>
</section>